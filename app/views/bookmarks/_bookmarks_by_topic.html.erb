<div class="row">
  <div class="col-md-8">
    <% topics_bookmarks_hash.each_key do |t| %>
      <% unless (topics_bookmarks_hash[t].empty? && controller.controller_name == "likes")%>
        <div class="media">
          <div class="media-body">
            <h2 class="media-heading">
              <div class="text-center">
                <%= link_to t.title, t %>
              </div>
            </h2>

              <div class="row">
                    <% topics_bookmarks_hash[t].each do |b| %>
                      <div class="col-xs-3">
                        <ul>

<% #
# This makes the thumbnail.
# Caution:  hardwired in the stackoverflow picture for the website pic
# ultimate pic from each bookmark site will appear
# %>
                          <li><% thumbnail = LinkThumbnailer.generate('http://stackoverflow.com') %>
                              <% thumbnail_image = thumbnail.images.first.src.to_s %>
                              <% if thumbnail_image %>
                                <%= link_to(image_tag(thumbnail_image, :width => 100, :height => 100), "http://stackoverflow.com") %>

            <%# Note: addressing what happens if website pic can't be had %>

                              <% else %>
                                <% thumbnail = LinkThumnailer.generate("http://stackoverflow.com") %>
                                <% thumbnail_image = thumbnail.images.first.src.to_s %>
                                <%  link_to(image_tag(thumbnail_image, :width => 100, :height => 100)) %>
                              <% end %>
                          </li>
<% #
# end of the thumbnail
# %>
                          <% unless (controller.controller_name == "topics" && controller.action_name == "index") %>
                            <%= render partial: 'bookmarks/bookmark_options', locals: {bookmark: b} %>
                          <% end %>

                          <li><small><%= link_to b.url %> </small></li>
                        </ul>
                      </div>
                    <% end %>
              </div>
          </div>
        </div>
      <% end %>
      <div class="row">
      </div>
    <% end %>
  </div>
</div>
