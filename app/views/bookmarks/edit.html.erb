<h1>Edit Bookmark</h1>

<div class="row">
  <%= form_for edit_topic_bookmark_path(@topic, @bookmark) do |f| %>
    <% if @bookmark.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@bookmark.errors.count, "error") %>.</h4>
        <ul>
          <% @bookmark.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_group_tag(@bookmark.errors[:url]) do %>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control', placeholder: "http://enter_url_like_this.com" %>
    <% end %>

    <div class="form-group">
      <%= f.submit "Save", class:'btn btn-success' %>
    </div>

  <% end %>


</div>
