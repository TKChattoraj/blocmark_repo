
<div class="container-fluid">
<h1 class="text-center">Bookmark:  <%= @bookmark.url %></h1>
<div class='row'>

  <% if policy(@bookmark).update? %>
    <div class='col-xs-4'>
      <%= link_to "Edit Bookmark", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn-xs btn-success' %>
    </div>
  <% end %>

  <% if policy(@bookmark).destroy? %>
    <div class='col-xs-4'>
      <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn-xs btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
    </div>
  <% end %>

  <div class='col-xs-4'>
    <%= render partial: 'likes/like', locals: {bookmark: @bookmark} %>
  </div>

</div>
</div>
