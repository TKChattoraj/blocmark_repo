<div class="container-fluid">
<h1 class="text-center">Topic:  <%= @topic.title%></h1>

  <small>
    <div class="row">
      <% @topic.bookmarks.each do |b| %>
      <div class="col-xs-3">
        <ul>
          <li><small><%= link_to b.url %> </small></li>
          <li>

              <%= link_to "Show", topic_bookmark_path(b.topic, b), class: 'btn-xs btn-info' %>


              <%= link_to "Edit", edit_topic_bookmark_path(b.topic, b), class: 'btn-xs btn-primary' %>


              <%= link_to "Delete", [b.topic, b], method: :delete, class: 'btn-xs btn-danger', data: {confirm: 'Are you sure you wnat to delete this bookmark?'} %>

          </li>
          <li><small>like/unlike status</small></li>
        </ul>
      </div>
      <% end %>
    </div>
  </small>
  <small>
    <div class="row">
      <% if user_signed_in? %>
        <div class='col-xs-3'>
          <%= link_to "Delete Topic", user_topic_path(current_user, @topic), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
        </div>
        <div class='col-xs-3'>
          <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), remote: true, class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class='js-bookmark-form'>
      </div>
    </div>
  </small>
</div>
